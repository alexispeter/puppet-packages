server {
  listen       <%= @ssl_port %>;

  ssl on;
  ssl_certificate      <%= @ssl_cert_file %>;
  ssl_certificate_key  <%= @ssl_key_file %>;

  ssl_session_timeout  5m;

  ssl_protocols  SSLv3 TLSv1;
  ssl_ciphers  ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
  ssl_prefer_server_ciphers   on;
