check process wowza with pidfile /var/run/wowza.pid
	start program = "/etc/init.d/wowza start"
	stop program  = "/etc/init.d/wowza stop"
	if failed port <%= @port %> with timeout 10 seconds then restart
	if failed port <%= @port_rcp %> with timeout 10 seconds then restart
	if 25 restarts within 50 cycles then timeout
